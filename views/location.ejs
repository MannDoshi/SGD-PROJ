<%- include ("./partials/header.ejs")%>
<div id="main" class="my-5">
    <div class="container">
        <div class="pt-4 mt-5">
            <div class="card w-75 m-3 mt-4 p-2 mx-auto rounded-0 border shadow-lg">
              <form  action="/filterlocation" method='post' class="m-5">
              <h2 class="text-center">Filter Crimes</h2>
               <p class="display-6 text-center">By Pincode, Area Covered & Number of cases</p>
                <div class="form-row mt-5 d-flex justify-content-center">
                   <div class="col-12 col-lg-6 d-flex justify-content-center">
                    <label for="pincode">Enter Pincode</label>
                    <input class="form-input form-control" id="pincode" type="number" name="pincode" placeholder="pincode">
                  </div>
                </div>
                <div class="form-row mt-5 d-flex justify-content-center">
                   <div class="col-12 col-lg-6 d-flex justify-content-center">
                    <label for="radius">Enter Radius</label>
                    <input class="form-input form-control" id="radius" type="number" name="radius" placeholder="in metres">
                  </div>
                </div>
                <div class="form-row mt-5  d-flex justify-content-center">
                  <div class="col-12 col-lg-6 d-flex justify-content-center">
                <label for="casenumber">Enter Number of Cases</label>
                    <input class="form-input form-control" id="casenumber" type="number" name="casenumber" placeholder="cases">
                  </div>
                </div>
      
                <hr>
                <div class="row d-flex justify-content-center">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
                
            </form>
            </div>
          </div>
        </div>
</div>
<%- include("./partials/footer.ejs")%>