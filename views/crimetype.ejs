<%- include ("./partials/header.ejs")%>
<div id="main" class="my-5">
    <div class="container">
        <div class="pt-4 mt-5">
            <div class="card w-75 m-3 mt-4 p-2 mx-auto rounded-0 border shadow-lg">
              <form  action="/filtercrimetype" method='post' class="m-5">
              <h2 class="text-center">Filter Crimes</h2>
               <p class="display-6 text-center">By Type of Crime Committed & No of Districts</p>
                <div class="form-row mt-5 d-flex justify-content-center">
                   <div class="col-12 col-lg-6 d-flex justify-content-center">
                    <label for="crimetype">Enter Type of Crime</label>
                <input class="form-input form-control" id="crimetype" type="text" name="crimetype" placeholder="type of crime">
                  </div>
                </div>
                <div class="form-row mt-5 d-flex justify-content-center">
                   <div class="col-12 col-lg-6 d-flex justify-content-center">
                    <label for="districtnumber">Enter Number of Districts</label>
                <input class="form-input form-control" id="districtnumber" type="number" name="districtnumber" placeholder="number of districts">
                  </div>
                </div>
      
                <hr>
                <div class="row d-flex justify-content-center">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
                
            </form>
            </div>
          </div>
        </div>
</div>
<%- include("./partials/footer.ejs")%>