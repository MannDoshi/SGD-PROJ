<%- include ("./partials/header.ejs")%>
<div id="main" class="my-5">
    <div class="container">
        <div class="pt-4 mt-5">
            <div class="card w-75 m-3 mt-4 p-2 mx-auto rounded-0 border shadow-lg">
              <form  action="/filtercrimes" method='post' class="m-5">
              <h2 class="text-center">Filter Crimes</h2>
               <p class="display-6 text-center">By Year, Month, Day, Type of Crime Committed & District Number</p>
                <div class="form-row">
                  <div class="col">
                    <label for="year">Enter Year</label>
                    <select id="year" class="form-select" name="year">
